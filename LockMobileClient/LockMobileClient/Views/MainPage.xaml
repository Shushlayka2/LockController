<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LockMobileClient.MainPage">

    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" Source="ic_fp_40px.png" VerticalOptions="CenterAndExpand" Margin="0, 100, 0, 0" HeightRequest="130" WidthRequest="130"/>
            <Label Grid.Row="1" Text="Scan the finger for unlock the lock" FontFamily="Verdana" FontSize="Large" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
